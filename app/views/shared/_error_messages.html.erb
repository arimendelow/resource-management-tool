<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <div>
      <b>The form contains <%= pluralize(@user.errors.count, "error") %>.</b>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
