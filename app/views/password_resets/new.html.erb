<% provide(:title, "Forgot Password") %>
<h1>Reset Your Password!</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form| %>
      <!-- Make this note the togglePassword function in assets/javascripts/users.coffee -->
      <%= javascript_tag "window.togglePassword()" %> 
      <%= form.label :email %>
      <%= form.email_field :email, placeholder: 'email', class: 'form-control' %>

      <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
