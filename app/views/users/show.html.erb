<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <!-- The 'gravatar_for' method lives in users_helper.rb -->
        <%= gravatar_for @user %> 
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <!-- Make sure we don't just display an empty list -->
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <!-- Smart enough to automatically use the microposts template partial -->
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
